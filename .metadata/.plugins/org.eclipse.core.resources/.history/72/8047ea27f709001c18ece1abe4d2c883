package projetos.caixaMercado;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Caixa.aberturaDeCaixa();
		int opcao;
		do {
			 opcao = sc.nextInt();
			Venda.addProdutos();
		}while(opcao != 0 );
		
		Venda.calcularTotal();
		sc.close();
	}
}
