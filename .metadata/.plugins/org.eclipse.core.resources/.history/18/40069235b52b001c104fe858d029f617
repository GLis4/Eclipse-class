package desafios;

import java.util.ArrayList;
import java.util.List;
import java.util.Random;

public class SorteioGrupo {

	public static void main(String[] args) {

		List<String> nomesAlunos = new ArrayList<>();
		nomesAlunos.add("Ana");
		nomesAlunos.add("Joao");
		nomesAlunos.add("maria");
		nomesAlunos.add("Tae");
		nomesAlunos.add("Jimin");
		nomesAlunos.add("Caracol");



		Random rm = new Random();


		for(int i = 0 ; i < 6; i++) {

			int select = rm.nextInt(nomesAlunos.size() );

			if(select + 1  < nomesAlunos.size()) {

				System.out.println("Grupo #" + i);

				System.out.println(nomesAlunos.get(select));
				System.out.println(nomesAlunos.get(select + 1 ));

				nomesAlunos.remove(select);
			}

			System.out.println("");
		}
	}
}
