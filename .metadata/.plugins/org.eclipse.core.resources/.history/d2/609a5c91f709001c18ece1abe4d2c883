package projetos.caixaMercado;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Caixa.aberturaDeCaixa();
		int opcao = sc.nextInt();;
		do {
			Venda.addProdutos();
			 opcao = sc.nextInt();
		}while(opcao != 0 );
		
		Venda.calcularTotal();
	}
}
