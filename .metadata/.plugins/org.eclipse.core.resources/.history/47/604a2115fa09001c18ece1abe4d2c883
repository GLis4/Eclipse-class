package projetos.caixaMercado;

import java.util.Random;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sa = new Scanner(System.in);
		Caixa.aberturaDeCaixa();
		int opcao = -1;
		while(opcao != 0 ) {
			System.out.println("Digite 0 para sair ou 1 para acrescentar produto: ");
			opcao = Integer.parseInt(sa.nextLine()); 
			switch(opcao) {
			case 1 :

				if(Caixa.caixaFechado == 1) {
					System.out.println("Caixa Fechado, execute a abertura de caixa");
				}else {

					Scanner sc = new Scanner(System.in);
					Random rd = new Random();
					Produtos p = new Produtos();
					System.out.println("Digite o codigo: ");
					p.codigo =  Integer.parseInt(sc.nextLine());
					p.valor = rd.nextInt(100);
					System.out.println("Digite quantidade : ");
					p.valor = p.valor *Integer.parseInt(sc.nextLine());;
					Venda.listCompras.add(p);
					sc.close();
				} 
				break;
			case 0 : 
				opcao = 0;
				sa.close();
			default: 
				System.out.println("Opcao não existe");
			}

		};
	}
}