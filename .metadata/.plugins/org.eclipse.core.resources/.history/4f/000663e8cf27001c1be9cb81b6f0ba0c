package projetos;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class GerenciadorIngredientes {

	static List<Ingredients> listIng = new ArrayList<>();
	public static void main(String[] args) {
		comprarEstoque();
		PesquisarIngredientes();
	}

	static void comprarEstoque(){


		int qtd = 2;

		for( int i = 0; i < qtd; i++) {
			Ingredients ing = new Ingredients();
			ing.nome = "Coca-Cola";
			ing.qtdEstoque = 1.5;

			listIng.add(ing);
		}
	}

	static void PesquisarIngredientes() {
		    
		    boolean achou = false;
		    for (int i = 0; i < listIng.size(); i++) {
		        if (listIng.get(i).nome.contains("Coca-Cola")) {
		        System.out.println("O livro cadastrado está na posição: " + listIng.indexOf(i));
		        System.out.println(listIng.get(i));
		        System.out.println("");
		        achou = true;
		    }
		    if (!achou) {
		        System.out.println("Título não encontrado!");
		        System.out.println("");
		    }
		}
	}
}
