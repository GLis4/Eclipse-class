package musicfy;

import java.util.List;
import java.util.ArrayList;
import java.util.Scanner;

public class TelaMusica {

	static	Musica ms = new Musica();

	static 	Scanner sc = new Scanner(System.in);
	static List<Musica> listMs = new ArrayList<>();


	static void selecionarOpcao() {
		int opcao;
		do {

			System.out.println("0- Voltar para o menu inicial");
			System.out.println("1- Incluir Musica");
			System.out.println("2- Consultar Musica");
			System.out.println("3- Alterar musica");
			System.out.println("4- Deletar Musica");
			opcao=  Integer.parseInt(sc.nextLine());

			switch(opcao) {
			case 0:
				TelaInicial.selecionarOpcao();
				break;
			case 1 :
				incluirDadosMusica();
				break;
			case 2:
				mostrarDadosMusica();
				break;
			case 3:
				alterarDadosMusica();
				break;
			case 4: 
				System.out.println("Musica deletada");
				TelaMusica.deletarDadosMusica();
				break;
			default:
				System.out.println("Não existe essa opção");
			}
		}while(opcao != 0);		
	}

	static void incluirDadosMusica() {

		Musica musica = new Musica();
		System.out.println("Informe o nome : ");
		musica.nome = sc.nextLine();
		System.out.println("Informe o genero : ");
		musica.genero = sc.nextLine();
		System.out.println("Informe a duração  : ");
		musica.duracao = Double.parseDouble(sc.nextLine());
		System.out.println("Informe o artista : ");
		musica.artista = sc.nextLine();

		listMs.add(musica);

	} 
	static void mostrarDadosMusica() {




		for(int i = 0; i < listMs.size(); i++ ) { 
			System.out.println("Musica\n");
			System.out.println("Nome   : " +listMs.get(0).nome);
			System.out.println("Genero : " +listMs.get(0).artista);
			System.out.println("Duração: " +listMs.get(0).genero);
			System.out.println("Artista: " + listMs.get(0).duracao);
			System.out.println();
		}
	}

	static void alterarDadosMusica() {
		Musica change = new Musica();
		if(listMs.isEmpty()) {
			System.out.println("Não existe dados para alterar");

		} else {
			System.out.println("\n Deseja alterar musica numero... (inicia-se em 0)");
			int indexMusic =Integer.parseInt( sc.nextLine());

			System.out.println(" 1- Mudar todos os dados \n"+ 
					" 2- Mudar nome \n" +
					" 3-Mudar genero \n" +
					" 4- Mudar a duração \n" + 
					" 5- Mudar o nome do artista");		
			int escolhaAlterar =Integer.parseInt( sc.nextLine());

			switch (escolhaAlterar) {
			case 1: 
				incluirDadosMusica();
				break;
			case 2 : 
				System.out.println("Informe o nome : ");
				change.nome = sc.nextLine();
				break;
			case 3 : 
				System.out.println("Informe o genero : ");
				change.genero = sc.nextLine();
				break;
			case 4 : 
				System.out.println("Informe a duração  : ");
				change.duracao = Double.parseDouble(sc.nextLine());
				break;
			case 5 : 
				System.out.println("Informe o artista : ");
				change.artista = sc.nextLine();
				break;
			default:
				System.out.println("Não é uma opção valida");
				break;
			}
			listMs.set(indexMusic, change);
		}
	}

	static void deletarDadosMusica() {
		if(ms.nome == null && ms.genero == null && ms.duracao == 0 && ms.artista == null ) {
			System.out.println("Não existe dados para alterar");
		} else {
			ms.nome = "";
			ms.genero = "";
			ms.duracao = 0;
			ms.artista = "";
		}
	}
}

