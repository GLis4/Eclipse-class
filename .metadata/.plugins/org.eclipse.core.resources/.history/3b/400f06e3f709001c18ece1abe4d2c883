package projetos.caixaMercado;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sa = new Scanner(System.in);
		Caixa.aberturaDeCaixa();
		int opcao = -1;
		while(opcao != 0 ) {

			opcao = sa.nextInt();
			Venda.addProdutos();

		};

		Venda.calcularTotal();
	}
}
