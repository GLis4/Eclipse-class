
public class desafioAnoNascimento {

	public static void main(String[] args) {

		//versão1
		int idade = 27;
		int resultado = 2021 - idade;
		System.out.println(resultado);

		//versão2
		int ano = 2045;
		int result = 2021 - ano;
		System.out.println(result);
		
		//versão3
		if(ano < 2021) {
			System.out.println(result);
		}else {
			System.out.println("Uau, você veio do futuro \\o/, falta "+- result + " ano para você nascer");
		}
	}
}