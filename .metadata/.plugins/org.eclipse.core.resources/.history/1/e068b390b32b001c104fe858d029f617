package desafios;

import java.util.Random;

public class SorteioGrupo {

	public static void main(String[] args) {

		String[] nomesAlunos = {"Ana", "Joao", "Love", "Mina1", "Mina2", "Mina3"};


		Random rm = new Random();

		for(int i = 0; i < nomesAlunos.length; i++) {

			int select = rm.nextInt(nomesAlunos.length - 1);
			
			System.out.println("Grupo #" + i);

			System.out.println(nomesAlunos[select]);
			System.out.println(nomesAlunos[(select +1)]);
		
			System.out.println("");
		}
	}
}
