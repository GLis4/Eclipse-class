package projetos.caixaMercado;

import java.util.Calendar;

public class Caixa {

	byte id;
	int valorFechamento; 
	Calendar dataFechamento;
	int caixaAberto;
	int caixaFechado = 1;

	int aberturaDeCaixa() {
		if(caixaFechado == 0) {
			return 0;
		}else {
			caixaAberto = 1;
			return 1; 
		}
	}
	boolean caixaFechamento() {
		//calcular valor de vendas do caixa, entrar com a data do dia e fechar.
		
		if(caixaAberto == 1) {
			return false;
		}else {
			dataFechamento.getTime();
			caixaAberto =  0;
			return true;
		}
	} 
	
}
