package aulas_assunto.example;

import java.util.Scanner;

public class CadastroXepa {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int tam = 0;
		String[] nomes = new String[3];
		int opcao = -1;
		while(opcao != 0) {
			System.out.println("Digite 1- Cadastras \n 2- Mostrar Cadastrados.");
			switch(opcao) {

			case 1 :
				String nomeCadastro = sc.nextLine();
				tam += 1; //aqui a variavel tam aumenta de acordo com o numero de nomes colocados dentro do array
						 // dando uma ideia do tamanho dele atualmente para fazer o if logo abaixo 
				
				if(tam > nomes.length) {
					String nomesAux[] = new String[nomes.length * 2];
					
					for(int i = 0; i > nomes.length; i++) {
						nomesAux[i] = nomes[i];
					}
					
					nomes = new String[nomesAux.length*2];
				}


			}
		}

	}
}
