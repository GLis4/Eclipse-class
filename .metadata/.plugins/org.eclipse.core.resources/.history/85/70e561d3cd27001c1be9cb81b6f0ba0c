package projetos;

import java.util.ArrayList;
import java.util.List;

public class GerenciadorIngredientes {

	static List<Ingredients> listIng = new ArrayList<>();
	public static void main(String[] args) {
		comprarEstoque();
		PesquisarIngredientes();
	}

	static void comprarEstoque(){

		Ingredients ing = new Ingredients();
		ing.nome = "Coca-Cola";
		ing.qtdEstoque = 1.5;

		int qtd = 2;

		for( int i = 0; i < qtd; i++) {
			listIng.add(ing);
		}
	}

	static void PesquisarIngredientes() {

		Ingredients ing = new Ingredients();
		ing.nome = "Coca-Cola";

		System.out.println(listIng.contains(ing));



	}
}
