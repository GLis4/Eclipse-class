package projetos.atividadeEstoque;

import java.util.ArrayList;
import java.util.List;

public class GerenciadorIngredientes {

	static List<Insumo> listIng = new ArrayList<>();

	static void comprarEstoque(Insumo insumo){

		listIng.add(insumo);
		
	}
	
	static void PesquisarIngredientes(String pesquisa) {
		for (int i = 0; i < listIng.size(); i++) {
			
			if (listIng.get(i).nome.contains(pesquisa)) {
				System.out.println("\nINSUMO CADASTRADO COM SUCESSO!");
				System.out.println("================================================");
				System.out.println("Código do Sistema   : " + listIng.get(i).codSistema);
				System.out.println("Nome                : " + listIng.get(i).nome);
				System.out.println("Categoria           : " + listIng.get(i).categoria);
				System.out.println("Preço de Custo      : " + listIng.get(i).pCusto);
				System.out.println("Medida              : " + listIng.get(i).medida);
				System.out.println("Estoque Mínimo      : " + listIng.get(i).estoqueM);
				System.out.println("Estoque Atual       : " + listIng.get(i).estoqueA);
				System.out.println("Situação do Estoque : " + listIng.get(i).sitEstoque);
				System.out.println("================================================");
			}
		}
	}
	
	static void baixaEstoque(double removerEstoque) {
		
		listIng.get(0).removerEstoque(removerEstoque);
		
	}
	
	
}
