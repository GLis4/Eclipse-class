package desafios.level3;

public class AnalisandoTextos {

	String textoUm;
	String textoDois; 

	String compararTamanhoTexto() {
		int numPalavra = textoUm.length();
		int numPalavra2 = textoDois.length();

		if(numPalavra > numPalavra2) {
			return textoUm;
		}else if(numPalavra < numPalavra2) {
			return textoDois;
		}else {
			return "";
		}

	}

	void contarVogais() {

		int contarVogais = 0;
		int contarVogaisDois = 0;

		char vogais[]  = {'a', 'e', 'i', 'o', 'u'};



		for (int i = 0; i < textoUm.length(); i++){
			char c = textoUm.charAt(i);
			if (contem (vogais, c))
				contarVogais++;
		}

		for (int i = 0; i < textoDois.length(); i++){
			char c = textoDois.charAt(i);
			if (contem (vogais, c))
				contarVogaisDois++;
		}
		compararVogais(contarVogais, contarVogaisDois);
	} 

	String compararVogais(int numVTUm, int numVTDois) {

		if (numVTUm > numVTDois) {
			return textoUm;	
		}else if (numVTUm == numVTDois){
			return textoDois;
		}	else {
			return "";	
		}
	} 

	void contarConsoante() {
		int contarCon = 0;
		int contarConDois = 0;
		char con[]  = {'b', 'c', 'd', 'f', 'g', 'j', 'k', 'l', 'm', 'n', 'p', 'q', 'r', 's', 't', 'v','w', 'x', 'y', 'z' };

		for (int i = 0; i < textoUm.length(); i++){
			char c = textoUm.charAt(i);
			if (contem (con, c))
				contarCon++;
		}

		for (int i = 0; i < textoDois.length(); i++){
			char c = textoDois.charAt(i);
			if (contem (con, c))
				contarConDois++;
		}

		compararConsoante(contarCon, contarConDois);
	}

	String compararConsoante(int numVCUm, int numVCDois) {

		if (numVCUm > numVCDois) {
			return textoUm;	
		}else if (numVCUm == numVCDois){
			return textoDois;
		}	else {
			return "";
		}


	}	

	boolean contem (char vetor[], char comparacao){
		boolean flag = false;

		for (int i = 0; i < vetor.length; i++){
			if (vetor[i] == comparacao)
				flag = true;
		}

		return flag;
	}
}

