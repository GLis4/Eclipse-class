package empresas.tech;

import java.util.Calendar;

public class TesteIdade {
	public static void main(String[] args) {

		Calendar c = Calendar.getInstance();
		c.set(Calendar.YEAR, 2004);
		c.set(Calendar.DAY_OF_MONTH, 10);
		c.set(Calendar.MONTH, 10);

		Calendar agora =  Calendar.getInstance();
		int ano = 0;
		ano = agora.get(Calendar.YEAR);
		int anoNasc = c.get(Calendar.YEAR);
		
		int idade = ano - anoNasc;
		if(c.get(Calendar.MONTH) + 1 > agora.get(Calendar.MONTH) + 1) {
	 			idade--;
	 		} else {
	 			if(c.get(Calendar.DAY_OF_MONTH) > agora.get(Calendar.DAY_OF_MONTH)) {
	 				idade--;
	 			}
	 		}
		
		System.out.println(idade);

		
	}
}
